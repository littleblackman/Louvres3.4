{% extends 'layout.html.twig'%}

{% block head %}

    <title> Billeterie Louvre </title>

{% endblock %}

{% block information %}
	<div> 
	    <h4> Information :</h4>
        <p>
           {{ "The louvre museum is open every day except"| trans }}:
            <br>
            {{ "Tuesdays, Sundays and holidays" | trans }}.
        </p>
	</div>
{% endblock %}

{% block infostock %}
   <div class="text-center">
       <p class="text-justify">
           <strong> {{ "Stock info" | trans }}: </strong>
           {{ "there are still enough tickets for the chosen date" | trans }}.
       </p>
   </div>
{% endblock %}


{% block body %}
    <div class="card bg-secondary border-secondary">
        <div class="well">

            {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
            {{ form_row(form._token) }}
            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            {# Génération manuelle et éclatée : #}
            {# Date : #}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.date, "what date would you like to come", {'label_attr': {'class': 'col-sm control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.date) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.date, {'attr':{'class':'datepicker'}}) }}

                </div>
            </div>

            {# Nombre de visiteur : #}
            <div class="form-group">

                {{ form_label(form.numberofticket, "Please enter the number of visitors", {'label_attr': {'class': 'col-sm control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.numberofticket) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.numberofticket, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {{ form_end(form, {'render_rest':false}) }}
        </div>



        <script>
            // http://jqueryui.com/datepicker/ Days to be disabled as an array
            var disableddates = ["1-5-", "1-11-", "25-12-"];

            function DisableSpecificDates(date) {
                var d = date.getDate();
                var m = date.getMonth();

                var currentdate = d + '-' + (m + 1)+ '-';

                for (var i = 0; i < disableddates.length; i++) {

                    // Now check if the current date is in disabled dates array.
                    if ($.inArray(currentdate, disableddates) != -1 ) {
                        return [false];
                    }
                }
                // In case the date is not present in disabled array, we will now check if it is a day.
                var day = date.getDay();
                return [(day != 2)];

            }
            $(document).ready(function() {

                $('.datepicker').datepicker({
                    minDate: 0,
                    dateFormat: 'dd MM yy',
                    firstDay:1,
                    beforeShowDay: DisableSpecificDates
                });
            });
            $('div#marie_louvresbundle_reservation_tickets').hide();
        </script>

    </div>
{% endblock %}



